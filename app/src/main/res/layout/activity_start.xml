<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".ProtoType.StartActivity">

    <TextView
        android:id="@+id/sTextView"
        android:layout_width="320dp"
        android:layout_height="512dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/border_layout"
        android:elevation="10dp"
        android:fontFamily="@font/noto"
        android:lineSpacingMultiplier="1.5"
        android:paddingLeft="22dp"
        android:paddingTop="169dp"
        android:textColor="@color/colorSplashBackground"
        android:textSize="22sp"
        android:text="당신의 궁금증을 해결해줄\n단 하나의 플랫폼\n"
        app:layout_constraintBottom_toTopOf="@+id/pStartBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="35dp" />

    <TextView
        android:id="@+id/pStartBtn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="START"
        android:elevation="5dp"
        android:background="@drawable/loginbtn_layout"
        android:textSize="18sp"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885" />

    <TextView
        android:id="@+id/pJoinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="@string/joinStr"
        android:fontFamily="@font/noto"
        android:textSize="14sp"
        android:textColor="@color/colorSplashBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pStartBtn"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>